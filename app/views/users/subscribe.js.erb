$('#subscribe-progress').modal('close');
$('#subscribe-' + '<%= @flash %>').modal('open');

<% if @flash == 'success' %>
  $('#user-token').text('<%= @user.token %>');
  setInterval(function() {
    timeLeft = parseInt($('span#time-left').text());
    if (timeLeft > 1) {
      $('span#time-left').text(timeLeft - 1);
    } else {
      window.location = 'http://foxfizz.com/';
    }
  }, 1000);

  $('#user_username, #user_password').val('');
<% end %>
